{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": true,
        "includes": ["!node_modules", "!.next", "!dist", "!build"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 100,
        "indentWidth": 4
    },
    "json": {
        "formatter": {
            "indentWidth": 4
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noUnknownAtRules": "off"
            },
            "performance": {
                "noNamespaceImport": "info"
            }
        },
        "domains": {
            "next": "recommended",
            "react": "recommended"
        }
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "extends": ["ultracite/biome/core", "ultracite/biome/next"]
}
